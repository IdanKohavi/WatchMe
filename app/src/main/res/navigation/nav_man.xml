<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_man"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.watchme.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_layout">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.watchme.RegisterFragment"
        android:label="register_layout"
        tools:layout="@layout/register_layout" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

    </fragment>
    <fragment
        android:id="@+id/addMovieFragment"
        android:name="com.example.watchme.AddMovieFragment"
        android:label="AddMovieFragment"
        tools:layout="@layout/add_movie_layout"/>
</navigation>