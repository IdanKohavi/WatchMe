<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Left Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/edit_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_movie"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/movie_title">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_edit_movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/input_edit_movie_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_poster"
                android:textSize="16sp"
                android:textColor="@color/on_background"
                app:icon="@drawable/add_photo_alternate_24px"
                app:iconGravity="textStart"
                app:iconSize="42dp"
                app:iconTint="@color/on_background"
                app:cornerRadius="12dp"
                app:rippleColor="@color/ripple_color"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="false" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/movie_rating">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_edit_movie_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Right Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/movie_description">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_edit_movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:maxLength="280"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/input_edit_movie_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_images_optional"
                android:textSize="16sp"
                android:textColor="@color/on_background"
                app:rippleColor="@color/ripple_color"
                app:icon="@drawable/add_photo_alternate_24px"
                app:iconGravity="textStart"
                app:iconSize="42dp"
                app:iconTint="@color/on_background"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/choose_genres_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_genres"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="start"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:chipSpacing="8dp"
                style="@style/Widget.MaterialComponents.Chip.Choice">

                <!-- Example chips only -->
                <com.google.android.material.chip.Chip
                    android:text="@string/genre_action" />
                <com.google.android.material.chip.Chip
                    android:text="@string/genre_comedy" />
                <com.google.android.material.chip.Chip
                    android:text="@string/genre_fantasy" />
                <com.google.android.material.chip.Chip
                    android:text="@string/genre_scifi" />

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_movie_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/save_button"
                android:textAllCaps="false"
                android:textColor="@color/on_background"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:rippleColor="@color/ripple_color"
                app:shapeAppearance="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
