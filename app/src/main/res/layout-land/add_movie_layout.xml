<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:fillViewport="true" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center">

        <!-- Left Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/add_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Movie"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Movie Title">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_add_movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/input_add_movie_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Poster"
                android:textSize="16sp"
                android:textColor="@color/on_background"
                app:icon="@drawable/add_photo_alternate_24px"
                app:iconGravity="textStart"
                app:iconSize="42dp"
                app:iconTint="@color/on_background"
                app:cornerRadius="12dp"
                app:rippleColor="@color/ripple_color"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="false" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Movie Rating">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_add_movie_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Right Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Movie Description">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_add_movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:maxLength="280"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/input_add_movie_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Images (Optional)"
                android:textSize="16sp"
                android:textColor="@color/on_background"
                app:rippleColor="@color/ripple_color"
                app:icon="@drawable/add_photo_alternate_24px"
                app:iconGravity="textStart"
                app:iconSize="42dp"
                app:iconTint="@color/on_background"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/choose_genres_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Genre's"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="start"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/Widget.MaterialComponents.Chip.Choice">

                <!-- Chips omitted here for brevity, can be copied from original -->
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_movie_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textSize="24sp"
                android:textColor="@color/on_background"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="false"
                app:rippleColor="@color/ripple_color"
                app:shapeAppearance="@style/Widget.Material3.Button.OutlinedButton"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
